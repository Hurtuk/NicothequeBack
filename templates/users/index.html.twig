{% extends 'base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="container-fluid">
        <h1>Utilisateurs</h1>
        <a href="{{ path('app_users_new') }}" class="btn btn-outline-dark float-right mb-3">Ajouter un utilisateur</a>
        <table class="table table-bordered table-hover table-striped">
            <thead>
                <tr class="table-primary">
                    <th>Nom</th>
                    <th>Permission</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.roles | join(',') }}</td>
                        <td><a href="{{ path('app_recommandation_user', {'userId' : user.id}) }}" class="btn btn-dark btn-sm">Recommandations</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}